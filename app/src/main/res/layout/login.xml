<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.Login">

    <!-- 로그인 화면 -->


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="130dp"
        android:layout_height="120dp"
        android:src="@drawable/swt_logo"
        app:layout_constraintBottom_toTopOf="@+id/textInputLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.735" />

    <Button
        android:id="@+id/loginButton"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:backgroundTint="#3B95FF"
        android:text="로그인"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginPassword"
        app:layout_constraintVertical_bias="0.3"
        tools:ignore="TextSizeCheck" />

    <EditText
        android:id="@+id/loginPassword"
        android:layout_width="240dp"
        android:layout_height="42dp"
        android:background="@drawable/rectangle11"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:textSize="12dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/loginID"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

    <EditText
        android:id="@+id/loginID"
        android:layout_width="240dp"
        android:layout_height="40dp"
        android:background="@drawable/rectangle11"
        android:ems="10"
        android:hint="E-mail"
        android:inputType="textEmailAddress"
        android:textColor="#000000"
        android:textSize="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textInputLayout"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.25">

    </com.google.android.material.textfield.TextInputLayout>

    <!-- 버튼 그림자없애기 -->


    <Button
        android:id="@+id/loginSignUpButton"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:backgroundTint="#FFFFFF"
        android:stateListAnimator="@null"
        android:text="회원가입"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/loginFindPW"
        app:layout_constraintStart_toStartOf="@+id/loginFindPW"
        app:layout_constraintTop_toBottomOf="@+id/loginButton"
        app:layout_constraintVertical_bias="0.2"
        tools:ignore="TextSizeCheck,TouchTargetSizeCheck" />

    <Button
        android:id="@+id/loginFindID"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:backgroundTint="#FFFFFF"
        android:stateListAnimator="@null"
        android:text="아이디 찾기"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="@+id/loginFindPW"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/loginFindPW"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck"
        app:layout_constraintTop_toBottomOf="@+id/loginSignUpButton"
        tools:layout_editor_absoluteY="650dp" />

    <Button
        android:id="@+id/loginFindPW"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:backgroundTint="#FFFFFF"
        android:stateListAnimator="@null"
        android:text="비밀번호 재설정"
        android:textColor="#000000"
        android:textSize="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TouchTargetSizeCheck,TextSizeCheck"
        app:layout_constraintTop_toBottomOf="@+id/loginFindID"
        tools:layout_editor_absoluteY="690dp" />


</androidx.constraintlayout.widget.ConstraintLayout>

